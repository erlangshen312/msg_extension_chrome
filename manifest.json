{
    "name": "Messenger Finder",
    "description": "Will help for some person who very used messengers/chats for finding person(account) without adding or saving number to contact on mobile phone!",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["tab", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Messenger Finder",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "whatsapp.png",
        "32": "whatsapp.png",
        "48": "whatsapp.png",
        "128": "whatsapp.png"
    }
}