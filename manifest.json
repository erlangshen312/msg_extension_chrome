{
    "name": "Whatsapp Finder",
    "description": "Demonstrates usage and features of the event page by reminding user to drink water",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["tab", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Drink Water Event",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "whatsapp.png",
        "32": "whatsapp.png",
        "48": "whatsapp.png",
        "128": "whatsapp.png"
    }
}